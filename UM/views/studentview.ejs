<!-- include header -->
<%- include('partial/header')%>
    <!-- /include header -->
    <main id="site-main">
        <div class="profile">
            <img src="https://img.icons8.com/ios/150/000000/administrator-male--v1.png" />
            <h1>Name : <%= one.name %>
            </h1>
            <h2>Roll No. : <%= one.rollNo %>
            </h2>
        </div>
        <form action="/" method="POST">
            <div class="subTable">
                <div class="tableDiv">
                    <table class=" table-striped table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Subject Name</th>
                                <th scope="col">Score (?/100)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">1</th>
                                <td>Math</td>
                                <td>
                                    <%= one.math %>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">2</th>
                                <td>English</td>
                                <td>
                                    <%= one.english %>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">3</th>
                                <td>Hindi</td>
                                <td>
                                    <%= one.hindi %>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">4</th>
                                <td>Science </td>
                                <td>
                                    <%= one.science %>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">5</th>
                                <td>Physics</td>
                                <td>
                                    <%= one.physic %>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <h1 style="text-align: center;">Status : <%= one.status %> </h1>
                </div>
            </div>
        </form>
    </main>
    <!-- include footer -->
    <%- include('partial/footer')%>
        <!-- /include footer -->