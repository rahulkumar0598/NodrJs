<!-- include header -->
<%- include('partial/header')%>
    <!-- /include header -->
    <main id="site-main">
        <div class="container">
            <h2>Editing score of <%= user.name %> </h2>

            <form action="/" method="POST" class="addSTudent" id="Update-user">
                <div class="newUser">
                    <div class="form-group">
                        <div class="mb-3">
                            <label for="name" class="form-label">Name : </label>
                            <input type="hidden" name="id" value="<%= user.id %>">
                            <input type="text" name="name" value="<%=user.name%>" required class="form-control" id="name">
                            <span id="ROLLNO" class="text-danger font-weight-bold"></span>                                     
                        </div>
                        <div class="mb-3">
                            <label for="rollNo" class="form-label">Roll No. : </label>
                            <input type="number" name="rollNo" value="<%= user.rollNo %>" required class="form-control" id="rollNo" placeholder="Enter Roll No">
                            <span id="NAME" class="text-danger font-weight-bold"></span>
                        </div>
                        <div class="mb-3">
                            <label for="physic" class="form-label">Physics : </label>
                            <input type="number" name="physic" value="<%= user.physic %>" class="form-control" id="physic">
                            <span id="PHYSIC" class="text-danger font-weight-bold"></span>
                        </div>
                        <div class="mb-3">
                            <label for="math" class="form-label">Math : </label>
                            <input type="number" name="math" value="<%= user.math %>" class="form-control" id="math">
                            <span id="MATH" class="text-danger font-weight-bold"></span>
                        </div>
                        <div class="mb-3">
                            <label for="english" class="form-label">English : </label>
                            <input type="number" name="english"  value="<%= user.english %>" class="form-control" id="english">
                            <span id="ENGLISH" class="text-danger font-weight-bold"></span>
                        </div>
                        <div class="mb-3">
                            <label for="hindi" class="form-label">Hindi : </label>
                            <input type="number" name="hindi" value="<%= user.hindi %>" class="form-control" id="hindi">
                            <span id="HINDI" class="text-danger font-weight-bold"></span>
                        </div>
                        <div class="mb-3">
                            <label for="science" class="form-label">Science : </label>
                            <input type="number" name="science" value="<%= user.science %>" class="form-control" id="science">
                            <span id="SCIENCE" class="text-danger font-weight-bold"></span>
                        </div>
                        <div class="mb-3">
                            <label for="status" class="form-label">Status (pass/fail) : </label>
                            <input type="text" name="status" required class="form-control" value="<%= user.status %>" id="status">
                            <span id="STATUS" class="text-danger font-weight-bold"></span>
                        </div>
                        <button type="submit" class="btn btn-success mr-3">Update</button>
                        <a href="/viewall" class="back">Back</a>
                    </div>
                </div>
            </form>
        </div>

    </main>
<!-- include footer -->
<%- include('partial/footer')%>
<!-- /include footer -->